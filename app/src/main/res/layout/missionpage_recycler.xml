<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mission_img"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/wrap_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mission_img"
            android:orientation="horizontal"
            android:weightSum="5">

            <!--  17/02/14 newicon 추가-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btn_img01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/mission_btn1" />

                <ImageView
                    android:id="@+id/newicon1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/new_icon"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btn_img02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/mission_btn1" />

                <ImageView
                    android:id="@+id/newicon2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/new_icon"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btn_img03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/mission_btn1" />

                <ImageView
                    android:id="@+id/newicon3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/new_icon"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btn_img04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/mission_btn1" />

                <ImageView
                    android:id="@+id/newicon4"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/new_icon"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/btn_img05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/mission_btn1" />

                <ImageView
                    android:id="@+id/newicon5"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/new_icon"
                    android:visibility="invisible" />
            </RelativeLayout>
            <!-- newicon 추가 끝 -->

        </LinearLayout>

        <!-- 글꼴크기를 dp로 줘서 일정하게 보이게 설정-->
        <TextView
            android:id="@+id/mission_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wrap_btn"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="test test test"
            android:textColor="@color/darkgray"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/mission_maintitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mission_subtitle"
            android:layout_marginLeft="16dp"
            android:text="[Mission] test test test"
            android:textColor="@color/darkgray"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/mission_leveltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mission_maintitle"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:text="level tset"
            android:textColor="@color/darkgray"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/level_star"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/mission_leveltext"
            android:layout_marginRight="16dp"
            android:scaleType="fitEnd"
            android:src="@drawable/level_star5" />

        <ImageView
            android:id="@+id/stamp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/stamp_256"
            android:visibility="invisible" />

        <!--미션숨기기버튼-->
        <FrameLayout
            android:id="@+id/layout_missionhidden"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:clickable="true">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="13dp"
                android:layout_gravity="end"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/turn_visibility" />

        </FrameLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>