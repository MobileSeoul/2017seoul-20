<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CastRecomment의 ListView -->
    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/nick_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/profile_img"
        android:text="nick name"
        android:textColor="@color/darkgray"
        android:textSize="12dp" />


    <TextView
        android:id="@+id/recomment_textarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nick_text"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/profile_img"
        android:text="review text area test review text area "
        android:textColor="@color/darkgray"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recomment_textarea"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/profile_img"
        android:text="12 시간전"
        android:textSize="8dp" />



    <ImageView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/date_text"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        android:background="@color/backcolor" />


</RelativeLayout>